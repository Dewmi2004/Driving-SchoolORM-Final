<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.drivingschoolormfinal.controller.LogingPageController">
    <children>
        <StackPane prefHeight="520" prefWidth="369.0" style="-fx-border-radius: 12; -fx-background-color: linear-gradient(to bottom right,  #a77d0a, #ffffff);" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="CENTER" maxWidth="360" spacing="18" style="-fx-background-color: linear-gradient(to bottom right,  #a77d0a, #ffffff); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 18, 0.4, 0, 8); -fx-padding: 28;" StackPane.alignment="CENTER">
   
                <ImageView fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true" />
   
                <Label style="-fx-font-size: 27px; -fx-font-weight: 1000;" text="Welcome Back">
               <font>
                  <Font name="System Bold Italic" size="35.0" />
               </font>
            </Label>
                <Label style="-fx-font-size:12px; -fx-text-fill:#666666;" text="Sign in to continue" />
   
                <VBox alignment="CENTER_LEFT" maxWidth="300" spacing="10">
                    <Label style="-fx-font-size:11px; -fx-text-fill:#444444;" text="Username" />
                    <TextField fx:id="usernameField" prefHeight="36" promptText="Enter your username" style="-fx-background-radius:8; -fx-border-radius:8; -fx-border-color: #e6e6e6; -fx-padding: 0 10 0 10;" />
   
                    <Label style="-fx-font-size:11px; -fx-text-fill:#444444; -fx-padding:6 0 0 0;" text="Password" />
                    <PasswordField fx:id="passwordField" prefHeight="36" promptText="Enter your password" style="-fx-background-radius:8; -fx-border-radius:8; -fx-border-color: #e6e6e6; -fx-padding: 0 10 0 10;" />
   
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <CheckBox fx:id="rememberMe" text="Remember me" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Hyperlink onAction="#onForgot" text="Forgot?" />
                    </HBox>
                </VBox>
   
                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="40" prefWidth="260" style="-fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 10; -fx-background-color: #a77d0a;" text="Sign In" textFill="#262524" />
   
                <Label fx:id="statusLabel" maxWidth="300" style="-fx-text-fill: #b00020; -fx-font-size: 12px;" text="" wrapText="true" />
   
                <HBox alignment="CENTER" spacing="6">
                    <Label style="-fx-text-fill:#666; -fx-font-size:12px;" text="Don't have an account?" />
                    <Hyperlink onAction="#onSignUp" text="Sign up" />
                </HBox>
   
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
